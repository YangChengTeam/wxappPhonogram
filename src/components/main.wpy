  height: @lh;
  margin-top: @lmt;
  flex-wrap: wrap;
  flex-direction: row;
  align-content: flex-start;
  overflow-y: auto;
}

.image-item {
    position: relative;
    width:292rpx;
    height:180rpx;
    margin-bottom: 20rpx;
}

.image-item-info, .image-item-bg , .image-item-lock{
    position: absolute;
}

